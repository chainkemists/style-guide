{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": "git@github.com:chainkemists/style-guide.git",
  "author": "Chainkemists",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "prettier": "^2.6.1",
    "turbo": "latest",
    "eslint-config-chks": "*",
    "@chks/prettier": "*"
  },
  "peerDependencies": {
    "eslint": "^8.15.0",
    "prettier": "^2.6.1"
  },
  "prettier": "@chks/prettier"
}
